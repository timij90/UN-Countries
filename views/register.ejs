<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <title>UN Member Countries</title>
</head>

<body tabindex="-1">
    <%- include('partials/navbar', {page: ' /register' }) %>
        <div class="container mx-auto p-4">
            <div class="hero bg-base-300 rounded-box p-2">
                <div class="hero-content text-center">
                    <div class="max-w-md">
                        <h1 class="text-5xl font-bold">Register</h1>
                        <p class="py-6">Please provide your credentials below
                        </p>
                    </div>
                </div>
            </div>
            <br>

            <div class="flex flex-col justify-center">
                <% if(typeof successMessage !=='undefined' && successMessage) { %>
                    <div class="alert">
                        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none"
                            viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span>
                            <%= successMessage %>
                        </span>
                    </div><br />
                    <a href="/login" class="btn btn-success">
                        Proceed to Log in
                    </a>
                    <% } else { %>
                        <form method="post" action="/register">
                            <div class="form-control">
                                <label for="userName" class="label">
                                    <span class="label-text font-bold text-base">User Name</span>
                                </label>
                                <input type="text" id="userName" name="userName" required placeholder="User Name"
                                    value="<%= typeof userName !== 'undefined' ? userName : '' %>"
                                    class="input input-bordered w-full rounded-box" />
                            </div>

                            <div class="form-control">
                                <label for="password" class="label">
                                    <span class="label-text font-bold text-base">Password</span>
                                </label>
                                <input type="password" id="password" name="password" required placeholder="Password"
                                    class="input input-bordered w-full rounded-box" />
                            </div>

                            <div class="form-control">
                                <label for="password2" class="label">
                                    <span class="label-text font-bold text-base">Confirm Password</span>
                                </label>
                                <input type="password" id="password2" name="password2" required
                                    placeholder="Confirm Password" class="input input-bordered w-full rounded-box" />
                            </div>

                            <div class="form-control">
                                <label for="email" class="label">
                                    <span class="label-text font-bold text-base">Email Address</span>
                                </label>
                                <input type="email" id="email" name="email" required placeholder="Email Address"
                                    class="input input-bordered w-full rounded-box" />
                            </div>

                            <div class="mt-6 flex flex-col justify-center items center">
                                <button type="submit" class="btn btn-primary rounded-lg">Register</button>
                            </div><br />
                        </form>
                        <% } %>

            </div>

            <% if(typeof errorMessage !=='undefined' && errorMessage) { %>
                <div class="alert alert-error">
                    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>
                        <%= errorMessage %>
                    </span>
                </div>
                <% } %>
        </div>
</body>

</html>